<% layout('/layouts/boilerplate') %>
<div class="container">
	<div class="row">
            <% for(let recipe of recipes){ %>
                <div class="col-4">
                    <a class="card h-100 text-decoration-none" href="/recipes/<%= recipe._id %>" class="card-link">
                        <img src="<%= recipe.img %>" class="card-img-top img-md" alt="recipe image"/>
                        <div class="card-body">
                            <h5 class="card-title text-center"><%= recipe.name %></h5>
                        </div>
                    </a>
                </div>
            <% } %>
	</div>
</div>
<style>
    img{
        height:25vw;
    }
</style>