<% layout('/layouts/boilerplate') %>
<div class="container-xxl mt-3">
	<div class="row align-items-center">
            <% for(let recipe of recipes){ %>
                <div class="col-6 col-md-4 col-xl-3">
                    <a class="card h-auto text-decoration-none mt-2" href="/recipes/<%= recipe._id %>" class="card-link">
                        <img src="<%= recipe.img %>" class="card-img-top" alt="<%= recipe.name %> thumbnail image"/>
                        <div class="card-body p-2">
                            <h5 class="card-title text-center mb-0"><%= recipe.name %></h5>
                        </div>
                    </a>
                </div>
            <% } %>
	</div>
</div>
<style>
    h5 { font-size: calc(0.3rem + 1.5vw); font-weight: bold;}
    img{
        height: 150px;
    }
    @media only screen and (min-width: 440px){
            img {height: 225px}
    }
    @media only screen and (min-width: 576px){
            img {height: 300px}
    }
    @media only screen and (min-width: 768px){
            img {height: 275px}
    }
    @media only screen and (min-width: 992px){
            img {height: 300px}
    }
    @media only screen and (min-width: 1100px){
            img {height: 325px}
    }
    @media only screen and (min-width: 1200px){
            img {height: 300px}
    }
</style>